{
    "Dapp": {
        "UserRole" : "client",
        "InstallPath" : "C:\\Program Files\\Privatix\\Dapp\\client",
        "Download":"http://localhost/dapp/dapp.zip",
        "Controller": {
            "EntryPoint":"dappctrl/dappctrl.exe",
            "Configuration":"dappctrl/dappctrl.config.json",
            "Service" : {
                "Command" :    "dappctrl.exe",
                "Args":        ["-config", "dappctrl.config.json"],
                "AutoStart" : true
            }
        },
        "Gui": {
            "EntryPoint":"dappgui/dapp-gui.exe",
            "Shortcuts" : true
        },
        "Registry" : {
            "Install": [
                {
                     "Name" : "Branding",
                     "Type":"string",
                     "Value":"Privatix"
                }
            ],
            "Uninstall" : [
                {
                    "Name" : "Comment",
                    "Type":"string",
                    "Value":"The Privatix Dapp, packaged by Privatix"
                },
                {
                    "Name" : "HelpLink",
                    "Type":"string",
                    "Value":"https://privatix.io"
                },
                {
                    "Name" : "NoModify",
                    "Type":"string",
                    "Value":"1"
                },
                {
                    "Name" : "NoRepair",
                    "Type":"string",
                    "Value":"1"
                },
                {
                    "Name" : "Publisher",
                    "Type":"string",
                    "Value":"Privatix (c)"
                },
                {
                    "Name" : "UrlInfoAbout",
                    "Type":"string",
                    "Value":"https://privatix.io"
                },
                {
                    "Name" : "VersionMajor",
                    "Type":"dword",
                    "Value":"1"
                },
                {
                    "Name" : "VersionMinor",
                    "Type":"dword",
                    "Value":"0"
                }
            ]
        }
    }
 }